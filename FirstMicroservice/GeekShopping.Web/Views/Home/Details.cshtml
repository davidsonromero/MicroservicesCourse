@model GeekShopping.Web.Models.ProductModel

<form method="POST">
    <input asp-for="Id" type="hidden" />
    <div class="pt-4">
        <div class="card container bg-dark" style="border: 1px solid #808080">
            <div class="card-header row bg-black" style="border-radius: 0px;">
                <div class="col-9">
                    <h1 class="text-light">@Model.Name</h1>
                </div>
                <div class="col-3 text-warning text-end">
                    <h1>@(string.Format("{0:c}", Model.Price))</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius: 35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge badge-primary text-success p-3 border">
                                        @Model.CategoryName
                                    </span>
                                    <h3 class="text-success">@Model.Name</h3>
                                    <p class="text-light">@Html.Raw(Model.Description)</p>
                                </div>
                                <div class="row px-4">
                                    <input asp-for="Count" class="form-control" disabled/>
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-black">
                <div class="col-12 col-md-6 pb-1">
                    <button class="btn-success btn-square form-control btn-lg" style="height: 50px;">Back to List</button>
                </div>
                <div class="col-12 col-md-6">
                    <button type="submit" class="btn btn-primary form-control btn-lg" style="height: 50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}